<UI>:
    id:scr_manager
    MainScreen:
    LoginScreen:

#### หน้า1 ####
<MainScreen>:
    name:"Scr_knowledge"
    BoxLayout:
        orientation: 'vertical'
        Image:
            source:"pic/bmi1.jpg"
        Button:
            text:"คำนวณ"
            size_hint: 0.50,0.20
            pos_hint:{'center_x': 0.5,'center_y': 0.5}
            font_name: "tahoma"
            on_press : app.root.current = "Scr_bmi"

            
###### หน้า2 ######
<LoginScreen>:
    name:"Scr_bmi"
    BoxLayout:
        orientation: 'vertical'
        GridLayout:
            cols:1
            TextInput:
                id: txt_weight
                hint_text : "input weight"
                font_size:20
                input_filter :'int' #กำหนดเป็นตัวเลขเท่านั้น
                size_hint:1,1
                readonly: True 
            Slider:
                id:slider_weight
                min:30
                max:100
                step:0.5
                set:40
                on_value: txt_weight.text = str(slider_weight.value)
            TextInput:
                id: txt_height
                hint_text : "input heigth"
                font_size:20
                input_filter :'int'
                size_hint:1,1   
                readonly: True
            Slider:
                id:slider_height
                min:100
                max:200
                step:1
                set:110
                on_value: txt_height.text = str(slider_height.value)
            Button:
                id: btn_bmi
                on_press: root.cal_bmi() #ผูกฟังก์ชั่น cal_bmi ไม่ส่งค่าใดๆ
                text:"bmi"
                background_color:"9966FF"
                size_hint: 1,1
            Label:
                id: lbl_bmi
                text:"bmi = "
                size_hint: 1,1
            Image:
                id: img_bmi
               
